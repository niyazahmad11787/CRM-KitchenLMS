<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="CustomerCreationSuite" verbose="1" preserve-order="true" parallel="tests"
       thread-count="2">
    <parameter name="Env" value="staging" />
    <listeners>
        <listener class-name="com.qa.hippo.main.utilities.listeners.Listeners" />
    </listeners>
    <test name="Lead Management Flow with no discount" enabled="false">
        <!-- ðŸ‘‡ Local parameters override or supply only to this test -->
        <parameter name="discountOption" value="NO"/>
        <parameter name="discountValue" value="0"/>
        <classes>
            <class name="com.qa.hippo.maintests.leadCreation.verifyMOLoginFunctionality"/>
            <class name="com.qa.hippo.maintests.leadCreation.verifySiteCreationFunctionality"/>
            <class name="com.qa.hippo.maintests.leadCreation.verifyAddScopeOfWorkFunctionality"/>
            <class name="com.qa.hippo.maintests.leadCreation.verifyOpportunityApprovalFunctionality"/>
            <class name="com.qa.hippo.maintests.leadCreation.verifyCreateBoqFunctionality"/>
            <class name="com.qa.hippo.maintests.leadCreation.verifyCustomerSentApprovalWithNoDiscountFunctionality"></class>
        </classes>
    </test>

    <test name="Lead Management Flow with discount" enabled="false">
        <parameter name="discountOption" value="YES"/>
        <parameter name="discountValue" value="5"/>
        <classes>
            <class name="com.qa.hippo.maintests.leadCreation.verifyMOLoginFunctionality"/>
            <class name="com.qa.hippo.maintests.leadCreation.verifySiteCreationFunctionality"/>
            <class name="com.qa.hippo.maintests.leadCreation.verifyAddScopeOfWorkFunctionality"/>
            <class name="com.qa.hippo.maintests.leadCreation.verifyOpportunityApprovalFunctionality"/>
            <class name="com.qa.hippo.maintests.leadCreation.verifyCreateBoqFunctionality"/>
            <class name="com.qa.hippo.maintests.leadCreation.verifyApproveBoqDiscountFunctionality"/>
            <class name="com.qa.hippo.maintests.leadCreation.verifyCustomerSentApprovalWithDiscountFunctionality"/>

        </classes>
    </test>

    <test name="Lead Management - Change Owner" enabled="false">
        <parameter name="discountOption" value="NO"/>
        <parameter name="discountValue" value="5"/>
        <classes>
            <class name="com.qa.hippo.maintests.leadCreation.verifyMOLoginFunctionality"/>
            <class name="com.qa.hippo.maintests.leadCreation.verifySiteCreationFunctionality"/>
            <class name="com.qa.hippo.maintests.leadCreation.verifyAddScopeOfWorkFunctionality"/>
            <class name="com.qa.hippo.maintests.leadCreation.verifyChangeOwnerFunctionality"/>
        </classes>
    </test>
    <test name="E2E Flow - Create and Mark Lead as Lost">
        <parameter name="discountOption" value="NO"/>
        <parameter name="discountValue" value="5"/>
        <classes>
            <class name="com.qa.hippo.maintests.leadCreation.verifyMOLoginFunctionality"/>
            <class name="com.qa.hippo.maintests.leadCreation.verifySiteCreationFunctionality"/>
            <class name="com.qa.hippo.maintests.leadCreation.verifyAddScopeOfWorkFunctionality"/>
            <class name="com.qa.hippo.maintests.leadCreation.verifyMarkLostFunctionality"/>
        </classes>
    </test>



</suite>
